include ../parts/mixins

.mdl-grid
  - cardSettings = { phone: { s: 4 }, tablet: { s: 4, o: 2 }, desktop: { s: 6, o: 4 } }
  
  if query_params.error
    +MessageCard(cardSettings, 'Ошибка при создании группы', "Не заполнены следующие поля: " + query_params.error)
  
  +Form(cardSettings, 'creategroupform', '/a/groups/create')
    +InputField('Имя', 'name', true)
    +ComboBox('Специальность', 'specialtyId', lists.specialties)