include ../parts/mixins

.mdl-grid
  - cardSettings = { desktop: { s: 10, o: 1 }, tablet: { s: 8 }, phone: { s: 4 } }
  
  +MvcMessages('Специальность создана', 'Специальность удалена', 'Специальность сохранена')

- name = { title: 'Имя',  field: 'name' }
- shortname = { title: 'Короткое имя',  field: 'shortname' }

- tableDefinition = {}
- tableDefinition.items = list_page_items
- tableDefinition.columns = [name, shortname]


.mdl-grid
  +Table(cardSettings, tableDefinition)

    