script $(function () {$('[data-toggle="tooltip"]').tooltip();})

block content
  .container
    .row
      #flag-wrapper.col-sm-8.col-md-8.col-lg-6.col-sm-offset-2.col-md-offset-2.col-lg-offset-3
        img#flag(src="flag.svg",
            onload="$(this).addClass('wave')"
            title="Сейчас неделя 42, " + todayWeek,
            class=(weekType === 1 ? "flag-upper" : "flag-lower"),
            data-toggle="tooltip",
            data-placement="top")

    .row
      .col-sm-8.col-md-8.col-lg-6.col-sm-offset-2.col-md-offset-2.col-lg-offset-3
        .btn-group.btn-group-justified
          .btn-group
            button.btn.btn-default Верхняя
          .btn-group
            button.btn.btn-default Нижняя
          .btn-group
            button.btn.btn-default.active
              | Текущая

    .row
      br

    .row
      each day in ['Понедельник', 'Вторник', 'Среда', 'Четверг', 'Пятница', 'Суббота']
        .col-sm-6.col-md-4.col-lg-4
          h3(class={active: day === 'Среда'})
            | #{day + ' '}
            small #{day=='Среда' ? 'сегодня': ''}
          .list-group
            each lesson in lessonsToday
              a.list-group-item(href='', class=lesson.now ? 'active' : '')
                p.list-group-item-text.pull-right #{lesson.starts} — #{lesson.ends}
                h5.list-group-item-heading
                  | #{lesson.name}
                  br
                p.list-group-item-text.pull-right #{lesson.classroom}
                p.list-group-item-text #{lesson.teacher}